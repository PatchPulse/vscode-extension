{
  "name": "patch-pulse",
  "displayName": "Patch Pulse",
  "description": "Keep a pulse on npm package updates! Shows inline version information for packages in package.json files.",
  "version": "0.0.1",
  "publisher": "patch-pulse",
  "license": "MIT",
  "engines": {
    "vscode": "1.96.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "patch-pulse.checkVersions",
        "title": "Check Package Versions"
      },
      {
        "command": "patch-pulse.refreshVersions",
        "title": "Refresh Package Versions"
      }
    ],
    "configuration": {
      "title": "Patch Pulse",
      "properties": {
        "patchPulse.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Patch Pulse functionality"
        },
        "patchPulse.checkOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Check versions when package.json files are opened"
        },
        "patchPulse.updateInterval": {
          "type": "number",
          "default": 3600,
          "description": "Update interval in seconds (default: 1 hour)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "1.101.0",
    "@types/mocha": "10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "8.34.1",
    "@typescript-eslint/parser": "8.34.1",
    "eslint": "9.29.1",
    "esbuild": "0.25.5",
    "npm-run-all": "4.1.5",
    "typescript": "5.8.3",
    "@vscode/test-cli": "0.0.11",
    "@vscode/test-electron": "2.5.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
